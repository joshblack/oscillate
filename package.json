{
  "name": "spectrum",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "build": "rimraf lib && node scripts/rollup/build.js",
    "commitmsg": "validate-commit-msg",
    "dev": "rimraf lib && babel -w -d lib --ignore=\"**/__tests__/**,**/__mocks__/**\" src",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src",
    "prettier": "prettier --write --no-bracket-spacing --single-quote --jsx-bracket-same-line --trailing-comma all --print-width 80 \"src/**/*.js\"",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "^1.1.3",
    "cli-table": "^0.3.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.30.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "filesize": "^3.5.10",
    "flow-bin": "^0.41.0",
    "flow-typed": "^2.1.1",
    "gzip-size": "^3.0.0",
    "husky": "^0.13.3",
    "jest": "^20.0.0",
    "lint-staged": "^3.4.0",
    "prettier": "^1.2.2",
    "pretty-bytes": "^4.0.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "regenerator-runtime": "^0.10.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-uglify": "^2.0.1",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "enzyme": "^2.8.2",
    "fbjs": "^0.8.9"
  },
  "peerDependencies": {
    "prop-types": "^15.5.8",
    "react": "^15.4.2",
    "whatwg-fetch": "^2.0.3"
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "\nNeed help? We're currently using a commit convention that is outlined here:\nhttps://github.com/conventional-changelog/conventional-changelog/blob/v0.5.3/conventions/angular.md\n\nWe use this convention in order to make contributions to the project clear and predictable.\n\nCurrently, we support the following types: feat, fix, docs, style, refactor, perf, test, chore, revert.\n\nYou can use these types in your commit message in the following fashion:\n\n$ git commit -m \"<type>(<scope>): some commit message here\""
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    },
    "globals": {
      "React$Element": true,
      "React$Component": true,
      "Class": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "no-unused-expressions": 0,
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "no-plusplus": 0,
      "prefer-template": 0,
      "global-require": 0,
      "arrow-parens": 0,
      "no-underscore-dangle": 0,
      "object-curly-spacing": 0,
      "jsx-a11y/no-marquee": 0,
      "react/jsx-filename-extension": 0,
      "react/no-array-index-key": 0,
      "react/require-default-props": 0,
      "react/prefer-stateless-function": 0,
      "import/named": 0,
      "import/prefer-default-export": 0
    }
  },
  "jest": {
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/examples"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "lint",
      "prettier",
      "git add"
    ]
  }
}
